<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow1"
    android:gravity="center_horizontal"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/dismiss_kraft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/close"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/kraft_1"
            android:background="@android:color/transparent"
            android:src="@drawable/kraft1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/kraft_2"
            android:background="@android:color/transparent"
            android:src="@drawable/kraft2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/kraft_3"
            android:background="@android:color/transparent"
            android:src="@drawable/kraft3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/kraft_4"
            android:background="@android:color/transparent"
            android:src="@drawable/kraft4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"/>
    </LinearLayout>
</LinearLayout>



